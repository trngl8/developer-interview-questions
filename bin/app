#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

$db = new \SQLite3(__DIR__ . '/../var/test.db', SQLITE3_OPEN_CREATE | SQLITE3_OPEN_READWRITE);
$db->enableExceptions(true);

$db->query('DROP TABLE IF EXISTS questions');
$db->query('CREATE TABLE IF NOT EXISTS questions(
    id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    title VARCHAR(255) NOT NULL,
    created_at DATETIME NOT NULL
)');
echo "Created table questions\n";

$db->query('INSERT INTO questions(title, created_at) VALUES("What is an abstract class?", "2020-01-01 10:00:00")');
$db->query('INSERT INTO questions(title, created_at) VALUES("Have PHP language support multiple inheritance?", "2020-01-01 10:00:00")');
$db->query('INSERT INTO questions(title, created_at) VALUES("Why we use traits in PHP?", "2020-01-01 10:00:00")');
echo "Inserted 3 questions \n";
echo "The last id is " . $db->lastInsertRowID() . "\n";

$db->query('DROP TABLE IF EXISTS answers');
$db->query('CREATE TABLE IF NOT EXISTS answers(
    id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
    question_id INTEGER NOT NULL,
    body VARCHAR(255) NOT NULL,
    created_at DATETIME NOT NULL
)');
echo "Created table answers\n";

$db->query('INSERT INTO answers(question_id, body, created_at) VALUES(1, "It is a class that cannot be instantiated, but only inherited.", "2020-01-01 10:00:00")');
$db->query('INSERT INTO answers(question_id, body, created_at) VALUES(2, "No, PHP does not support multiple inheritance.", "2020-01-01 10:00:00")');
$db->query('INSERT INTO answers(question_id, body, created_at) VALUES(3, "Traits are used to declare methods that can be used in multiple classes.", "2020-01-01 10:00:00")');
echo "Inserted 3 answers \n";
echo "The last id is " . $db->lastInsertRowID() . "\n";

